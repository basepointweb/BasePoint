<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
	<ImplicitUsings>enable</ImplicitUsings>
    <PackageTags>CleanArchitecture,Presentation,AspNet.Core</PackageTags>
    <RepositoryUrl>https://github.com/basepointweb/BasePoint</RepositoryUrl>
    <Authors>Elias Silva</Authors>
    <Version>0.0.20</Version>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	<IsPackable>true</IsPackable>
	<Title>BasePoint.Core.Presentation.AspNetCoreApi</Title>
	<Description>A package to develop rest apis with AspNet.Core</Description>
	<PackageIcon>BPIcon128x128.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.4.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BasePoint.Core\BasePoint.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="BPIcon128x128.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
